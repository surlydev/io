{
  "name": "io-api",
  "version": "2.0.0",
  "description": "Twitch chat client",
  "repository": {
    "type": "git",
    "url": "https://github.com/MichaelJolley/io"
  },
  "main": "index.js",
  "_moduleAliases": {
    "@shared": "../shared/dist"
  },
  "scripts": {
    "start": "node dist/index.js",
    "debug:pkg": "nodemon -L --watch package.json --exec 'npm i'",
    "debug:app": "nodemon -L -e js,ts,htm --watch src --exec 'npm run build && node --inspect=0.0.0.0:9229 dist/index.js'",
    "debug": "npm-run-all --parallel debug:pkg debug:app",
    "build": "tsc -b"
  },
  "author": "Michael Jolley <mike@sparcapp.io>",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^16.28.7",
    "dotenv": "^8.0.0",
    "express": "^4.17.0",
    "module-alias": "^2.2.0",
    "mongoose": "^5.7.5",
    "query-string": "^6.5.0",
    "restler": "^3.4.0",
    "ts-node": "^8.1.1"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^12.0.2",
    "@types/restler": "^3.1.5",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.5"
  }
}
